<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="Novo Anúncio" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                style="@style/AppCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Título -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Título"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/AppTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex: TV 42 polegadas semi nova">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTituloAnuncio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Descrição -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/AppTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descreva seu produto">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescricaoAnuncio"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Preço -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preço"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/AppTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="R$ 0,00"
                        app:prefixText="R$ ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPrecoAnuncio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Categoria -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Categoria"/>

                    <Spinner
                        android:id="@+id/spinnerCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:spinnerMode="dialog"/>

                    <!-- Entrega e Retirada -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrega e Retirada"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupEntrega"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRetirada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Somente retirada"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEntrega"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrega disponível"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRetiradaEntrega"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retirada e entrega"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Formas de Pagamento -->
                    <TextView
                        style="@style/AppTextView.SectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Formas de Pagamento"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupPagamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDinheiro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinheiro"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIX"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCartaoDebito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cartão Débito"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCartaoCredito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cartão Crédito"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            app:chipBackgroundColor="@color/green_chip_background"
                            app:chipStrokeColor="@color/gray_border"
                            app:chipStrokeWidth="1dp"/>
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fotos -->
            <TextView
                style="@style/AppTextView.SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Fotos (Até 3)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFoto1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/gray_background">
                    <ImageView
                        android:id="@+id/ivFoto1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera"
                        android:padding="30dp"
                        app:tint="@color/gray_text"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFoto2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/gray_background">
                    <ImageView
                        android:id="@+id/ivFoto2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera"
                        android:padding="30dp"
                        app:tint="@color/gray_text"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFoto3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/gray_background">
                    <ImageView
                        android:id="@+id/ivFoto3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera"
                        android:padding="30dp"
                        app:tint="@color/gray_text"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPublicarAnuncio"
                style="@style/AppButton.Primary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Publicar Agora"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>