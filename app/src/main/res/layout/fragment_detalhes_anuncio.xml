<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="Detalhes" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Carrossel de fotos -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpFotos"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvDetalheTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Bicicleta Aro 29 Seminova com marchas Shimano"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vpFotos" />

            <TextView
                android:id="@+id/tvDetalhePreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/green_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="R$ 850,00"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheTitulo" />

            <TextView
                android:id="@+id/tvDetalheLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                tools:text="Vila Mariana, SP"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalhePreco" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_border"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheLocal" />

            <TextView
                android:id="@+id/tvLabelDescricao"
                style="@style/AppTextView.SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/viewDivider" />

            <TextView
                android:id="@+id/tvDetalheDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                tools:text="Bicicleta em ótimo estado, usada poucas vezes. Pneus novos, travões regulados. Motivo da venda: mudança."
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDescricao" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContato"
                style="@style/AppButton.Primary"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Entrar em Contato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheDescricao"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>