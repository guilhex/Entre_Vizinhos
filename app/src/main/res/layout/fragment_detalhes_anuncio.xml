<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/AppToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="Detalhes" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Carrossel de fotos -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpFotos"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivDetalheFavorito"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_chip_categoria"
                android:backgroundTint="#80FFFFFF"
                android:padding="8dp"
                android:src="@drawable/ic_heart"
                app:tint="@color/gray_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDetalheTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Bicicleta Aro 29 Seminova com marchas Shimano"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vpFotos"
                tools:text="TV 42 polegadas semi nova" />

            <TextView
                android:id="@+id/tvDetalheCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/green_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="R$ 850,00"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheTitulo"
                tools:text="Eletrônicos" />

            <TextView
                android:id="@+id/tvDetalhePreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                tools:text="Vila Mariana, SP"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalhePreco" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_border"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheLocal" />

            <TextView
                android:id="@+id/tvLabelDescricao"
                style="@style/AppTextView.SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalhePreco" />

            <TextView
                android:id="@+id/tvDetalheDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                tools:text="Bicicleta em ótimo estado, usada poucas vezes. Pneus novos, travões regulados. Motivo da venda: mudança."
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDescricao"
                tools:text="Televisão LED 42 polegadas em excelente estado. Pouco usada, todos os acessórios inclusos." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerVendedor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_card_vendedor"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/tvDetalheDescricao">

                <TextView
                    android:id="@+id/tvLabelVendedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendedor"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivAvatarVendedor"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_chip_categoria"
                    android:backgroundTint="#E0E0E0"
                    android:padding="10dp"
                    android:src="@drawable/ic_perfil"
                    app:tint="#757575"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLabelVendedor" />

                <TextView
                    android:id="@+id/tvNomeVendedor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivAvatarVendedor"
                    app:layout_constraintTop_toTopOf="@id/ivAvatarVendedor"
                    tools:text="João Silva" />

                <TextView
                    android:id="@+id/tvLocalVendedor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivAvatarVendedor"
                    app:layout_constraintTop_toBottomOf="@id/tvNomeVendedor"
                    tools:text="Urutaí, GO" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWhatsapp"
                android:layout_width="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/green_primary"
                android:padding="12dp"
                android:text="Contato WhatsApp"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/stat_sys_speakerphone"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/containerVendedor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDenunciar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:padding="12dp"
                android:text="Denunciar"
                android:textColor="#D32F2F"
                app:strokeColor="#D32F2F"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDetalheTitulo"
                app:layout_constraintTop_toBottomOf="@id/btnWhatsapp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>