<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.entrevizinhos.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_feed"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="br.com.entrevizinhos.ui.FeedFragment"
        android:label="Início"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_detalhesAnuncioFragment"
            app:destination="@id/detalhesAnuncioFragment" />
    </fragment>

    <fragment
        android:id="@+id/colecaoFragment"
        android:name="br.com.entrevizinhos.ui.ColecaoFragment"
        android:label="Coleção"
        tools:layout="@layout/fragment_colecao" />

    <fragment
        android:id="@+id/perfilFragment"
        android:name="br.com.entrevizinhos.ui.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil">

        <action
            android:id="@+id/action_perfil_to_criarAnuncio"
            app:destination="@id/criarAnuncioFragment" />

        <action
            android:id="@+id/action_perfil_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_perfil_to_editarPerfil"
            app:destination="@id/editarPerfilFragment" />

        <action
            android:id="@+id/action_perfil_to_detalhesAnuncio"
            app:destination="@id/detalhesAnuncioFragment" />

        <action
            android:id="@+id/action_perfil_to_editarAnuncio"
            app:destination="@id/editarAnuncioFragment" />
    </fragment>

    <fragment
        android:id="@+id/criarAnuncioFragment"
        android:name="br.com.entrevizinhos.ui.CriarAnuncioFragment"
        android:label="Criar Anúncio"
        tools:layout="@layout/fragment_criar_anuncio" />

    <fragment
        android:id="@+id/editarAnuncioFragment"
        android:name="br.com.entrevizinhos.ui.EditarAnuncioFragment"
        android:label="Editar Anúncio"
        tools:layout="@layout/fragment_criar_anuncio">
        <argument
            android:name="anuncio"
            app:argType="br.com.entrevizinhos.model.Anuncio" />
        <action
            android:id="@+id/action_editarAnuncio_to_perfil"
            app:destination="@id/perfilFragment"
            app:popUpTo="@id/perfilFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/detalhesAnuncioFragment"
        android:name="br.com.entrevizinhos.ui.DetalhesAnuncioFragment"
        android:label="Detalhes do Anúncio"
        tools:layout="@layout/fragment_detalhes_anuncio">
        <argument
            android:name="anuncio"
            app:argType="br.com.entrevizinhos.model.Anuncio" />
    </fragment>

    <fragment
        android:id="@+id/editarPerfilFragment"
        android:name="br.com.entrevizinhos.ui.EditarPerfilFragment"
        android:label="Editar Perfil"
        tools:layout="@layout/fragment_editar_perfil">
        <argument
            android:name="usuario"
            app:argType="br.com.entrevizinhos.model.Usuario" />
    </fragment>

</navigation>